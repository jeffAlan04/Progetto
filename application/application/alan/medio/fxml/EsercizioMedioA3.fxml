<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.control.ProgressBar?>
<AnchorPane styleClass="anchor" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="626.0" prefWidth="902.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.alan.medio.EsercizioMedioA3">
    <!-- Outer AnchorPane with rounded corners and border -->
    <AnchorPane layoutX="22.0" layoutY="39.0" prefHeight="565.0" prefWidth="858.0"
                style="-fx-background-color: linear-gradient(to bottom right, #a8e063, #56ab2f);
                         -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-border-color: black; -fx-border-width: 2px;">
        <!-- Inner AnchorPane with rounded corners and border -->
        <AnchorPane layoutX="54.0" layoutY="28.0" prefHeight="509.0" prefWidth="750.0"
                    style="-fx-background-color: #eafaf1; -fx-background-radius: 15px;
                               -fx-border-radius: 15px; -fx-border-color: black; -fx-border-width: 2px;">
            <!-- ProgressBar -->
            <ProgressBar fx:id="progressBar" layoutX="50.0" layoutY="55.0" prefWidth="650.0"
                         progress="0.0"/> <!-- Initial progress set to 0.0 -->

            <!-- Numero progressivo di esercizio -->
            <Text fill="#2c6e49" layoutX="50.0" layoutY="25.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Esercizio 3" wrappingWidth="650.0">
                <font>
                    <Font size="24.0"/>
                </font>
            </Text>

            <!-- Consegna dell'esercizio -->
            <Text fill="#2c6e49" layoutX="50.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Correggi il codice" wrappingWidth="650.0">
                <font>
                    <Font size="18.0"/>
                </font>
            </Text>

            <!-- Area di testo per il codice da correggere with rounded corners and border -->
            <AnchorPane layoutX="50.0" layoutY="80.0" prefHeight="180.0" prefWidth="650.0"
                        style="-fx-background-color: white; -fx-background-radius: 10px;
                                     -fx-border-radius: 10px; -fx-border-color: black; -fx-border-width: 1px;">
                <Text fx:id="codeArea" layoutX="20.0" layoutY="20.0" style="-fx-font-family: 'Courier New';"/>
            </AnchorPane>

            <!-- Area di testo per la risposta con rounded corners and border -->
            <TextArea fx:id="rispostaUserArea" layoutX="50.0" layoutY="345.0" prefHeight="20.0" prefWidth="300.0"
                      style="-fx-font-family: 'Courier New'; -fx-background-color: #f0f8f0;
                                   -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: black; -fx-border-width: 1px;"/>

            <!-- Pulsante per verificare il codice with rounded corners -->
            <Button fx:id="verifyButton" layoutX="467.0" layoutY="450.0" mnemonicParsing="false"
                    prefHeight="26.0" prefWidth="91.0" style="-fx-background-color: #4caf50; -fx-text-fill: white;
                                 -fx-background-radius: 5px; -fx-border-radius: 5px;" text="Verifica"/>

            <!-- Pulsante Next with rounded corners -->
            <Button fx:id="nextButton" layoutX="604.0" layoutY="450.0" mnemonicParsing="false"
                    prefHeight="26.0" prefWidth="91.0" style="-fx-background-color: #4caf50; -fx-text-fill: white;
                                 -fx-background-radius: 5px; -fx-border-radius: 5px;" text="Next"/>

            <Button fx:id="helpButton" layoutX="340.0" layoutY="450.0" mnemonicParsing="false"
                    prefHeight="26.0" prefWidth="91.0"
                    style="-fx-background-color: #FEBE10; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px;"
                    text="Suggerimento"/>

            <!-- Pulsante per uscire with rounded corners -->
            <Button fx:id="esciButton" layoutX="50.0" layoutY="450.0" mnemonicParsing="false"
                    prefHeight="26.0" prefWidth="91.0" style="-fx-background-color: #e53935; -fx-text-fill: white;
                                 -fx-background-radius: 5px; -fx-border-radius: 5px;" text="Esci"/>

            <!-- Testo per il feedback -->
            <Text fx:id="feedbackText" fill="#388e3c" layoutX="50.0" layoutY="420.0" strokeType="OUTSIDE"
                  strokeWidth="0.0" text="">
                <font>
                    <Font size="16.0"/>
                </font>
            </Text>
        </AnchorPane>
    </AnchorPane>

    <!-- Title text styled in green -->
    <Text fill="#2c6e49" layoutX="371.0" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="Esercizio Medio" wrappingWidth="178.521484375">
        <font>
            <Font size="22.0"/>
        </font>
    </Text>
</AnchorPane>
