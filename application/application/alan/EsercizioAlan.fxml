<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="605.0" prefWidth="902.0"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.alan.CostruzioneScenaAlan"
            stylesheets="@../application.css">
    <!-- Outer Background -->
    <AnchorPane layoutX="25.0" layoutY="25.0" prefHeight="565.0" prefWidth="858.0"
                style="-fx-background-color: linear-gradient(to bottom, #E8F5E9, #C8E6C9); -fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 15px; -fx-border-radius: 15px;">
        <!-- Inner Background -->
        <AnchorPane layoutX="54.0" layoutY="28.0" prefHeight="509.0" prefWidth="750.0"
                    style="-fx-background-color: linear-gradient(to bottom, #FFFFFF, #E8F5E9); -fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 15px; -fx-border-radius: 15px;">
            <Text styleClass="text-title" layoutX="235.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Java Debug Quest"/>

            <!-- Facile Section -->
            <AnchorPane layoutX="50.0" layoutY="100.0" prefHeight="85.0" prefWidth="650.0"
                        style="-fx-background-color: linear-gradient(to bottom, #A5D6A7, #81C784); -fx-border-color: black; -fx-border-width: 1px; -fx-background-radius: 10px; -fx-border-radius: 10px;">
                <Text styleClass="text-section" layoutX="20.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Facile"/>
                <Button fx:id="iniziaBtnFacile" styleClass="button-large" layoutX="500.0" layoutY="20.0"
                        mnemonicParsing="false"
                        onAction="#ScenaEsercizioFacile" text="Inizia"/>
            </AnchorPane>

            <!-- Intermedio Section -->
            <AnchorPane layoutX="50.0" layoutY="200.0" prefHeight="85.0" prefWidth="650.0"
                        style="-fx-background-color: linear-gradient(to bottom, #A5D6A7, #81C784); -fx-border-color: black;
                                     -fx-border-width: 1px; -fx-background-radius: 10px; -fx-border-radius: 10px;">
                <Text styleClass="text-section" layoutX="20.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Intermedio"/>
                <Button fx:id="iniziaBtnMedio" styleClass="button-large" layoutX="500.0" layoutY="20.0"
                        mnemonicParsing="false"
                        onAction="#ScenaEsercizioIntermedio" text="Inizia"/>
            </AnchorPane>

            <!-- Difficile Section -->
            <AnchorPane layoutX="50.0" layoutY="300.0" prefHeight="85.0" prefWidth="650.0"
                        style="-fx-background-color: linear-gradient(to bottom, #A5D6A7, #81C784); -fx-border-color: black; -fx-border-width: 1px; -fx-background-radius: 10px; -fx-border-radius: 10px;">
                <Text styleClass="text-section" layoutX="20.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Difficile"/>
                <Button fx:id="iniziaBtnDifficile" styleClass="button-large" layoutX="500.0" layoutY="20.0"
                        mnemonicParsing="false"
                        onAction="#ScenaEsercizioDificile" text="Inizia"/>
            </AnchorPane>

            <!-- Indietro Button -->
            <Button styleClass="button-back" layoutX="50.0" layoutY="440.0" mnemonicParsing="false"
                    onAction="#ScenaDashbord"
                    text="Indietro" style="-fx-background-color: #AA0000;"/>
        </AnchorPane>
    </AnchorPane>
</AnchorPane>
